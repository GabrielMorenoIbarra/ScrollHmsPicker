<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/WrapContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.github.deweyreed.scrollhmspicker.NumberPickerView
        android:id="@+id/pickerHours"
        style="@style/ScrollNumberPickerStyle"
        app:npv_MaxValue="23"
        app:npv_MinValue="0"
        app:npv_TextArray="@array/array_0to23"
        app:npv_WrapSelectorWheel="false"/>

    <TextView
        android:id="@+id/textHours"
        style="@style/Label"
        android:text="@string/scroll_hms_picker_hours_label"/>

    <io.github.deweyreed.scrollhmspicker.NumberPickerView
        android:id="@+id/pickerMinutes"
        style="@style/ScrollNumberPickerStyle"
        app:npv_MaxValue="59"
        app:npv_MinValue="0"
        app:npv_TextArray="@array/array_0to59"/>

    <TextView
        android:id="@+id/textMinutes"
        style="@style/Label"
        android:text="@string/scroll_hms_picker_minutes_label"/>

    <io.github.deweyreed.scrollhmspicker.NumberPickerView
        android:id="@+id/pickerSeconds"
        style="@style/ScrollNumberPickerStyle"
        app:npv_MaxValue="59"
        app:npv_MinValue="0"
        app:npv_TextArray="@array/array_0to59"/>

    <TextView
        android:id="@+id/textSeconds"
        style="@style/Label"
        android:text="@string/scroll_hms_picker_seconds_label"/>
</LinearLayout>
